<div class="container wishlist">
  <h1>Your Wishlist</h1>

  <div class="bird-grid">
    <% @wishlisted_birds.each do |bird| %>
      <div class="card bird-card">
        <%= link_to bird_path(bird), style: "text-decoration: none;" do %>
          <%= image_tag bird.photo, class: 'bird-photo' %>
          <div class="card-body">
            <h4><%= bird.name %></h4>
            <p>
              <strong><%= bird.species %></strong>
              <%= bird.price_per_day %>â‚¬ per day
            </p>
          </div>
          <i class="fas fa-heart like-icon" data-bird-id="<%= bird.id %>"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
