

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <!-- Logo à gauche -->
    <%= link_to root_path, class: "navbar-brand flex-center" do %>
      <%= image_tag "https://static.vecteezy.com/system/resources/previews/024/959/322/original/hand-drawn-vintage-bird-logo-in-flat-style-png.png", class: "logo-img" %>
      <p class="navbar-title">AirBirdsNBees</p>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item flex-center">
          <%= link_to birds_path, class: "nav-link flex-center" do %>
            <i class="fas fa-home"></i>
            <p>Aviary</p>
          <% end %>
        </li>

      <% if user_signed_in? %>
        <li class="nav-item flex-center">
          <%= link_to new_bird_path, class: "nav-link flex-center" do %>
            <i class="fas fa-plus"></i>
            <p>Add bird</p>
          <% end %>
        </li>
        <% end %>

        <% if user_signed_in? %>
          <li class="nav-item dropdown flex-center profile-dropdown">
            <a href="#" class="avatar nav-link" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag current_user.avatar_url, class: "avatar-img" %> <!-- Cette ligne a été modifiée -->
              <p>Profile</p>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Bookings", renter_dashboards_path, class: "dropdown-item" %>
              <%= link_to "Wishlist", user_wishlist_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item flex-center">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

